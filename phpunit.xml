<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="tests/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true">
    <testsuites>
        <testsuite name="app">
            <directory>./tests/</directory>
        </testsuite>
        <testsuite name="InspecaoTecnica">
            <directory>./tests/InspecaoTecnica/</directory>
        </testsuite>
        <testsuite name="Core">
            <directory>./tests/Core/</directory>
        </testsuite>
        <testsuite name="Rastreio">
            <directory>./tests/Rastreio/</directory>
        </testsuite>
        <testsuite name="Magento">
            <directory>./tests/Magento/</directory>
        </testsuite>
        <testsuite name="Allnation">
            <directory>./tests/Allnation/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">app/</directory>
        </whitelist>
    </filter>
    <php>
        <env name="APP_ENV" value="testing" />
        <env name="CACHE_DRIVER" value="array" />
        <env name="SESSION_DRIVER" value="array" />
        <env name="QUEUE_DRIVER" value="sync" />
        <env name="EMAIL_SEND_ENABLED" value="true" />
        <env name="DB_CONNECTION" value="tests" />
        <env name="SKYHUB_ENABLED" value="false" />
        <env name="MAGENTO_ENABLED" value="false" />
        <env name="TUCANOMG_ENABLED" value="false" />
        <env name="FAILED_JOB_SLACK_WEBHOOK_URL" value="" />
    </php>
    <listeners>
        <listener class="PHPUnit_Util_Log_VCR" file="vendor/php-vcr/phpunit-testlistener-vcr/PHPUnit/Util/Log/VCR.php" />
    </listeners>
</phpunit>
